<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.payment_list_title%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.payment_list_title%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive theme-scrollbar">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th><%=lan.gateway_image%></th>
                                            <th><%=lan.payment_gateway_name%></th>
                                            <th><%=lan.payment_gateway_sub_title%></th>
                                            <th><%=lan.payment_gateway_stats%></th>
                                            <th><%=lan.show_on_wallet_question%></th>
                                            <% let permissions = per != "1" ? per.payment_list[1] : "1" %>
                                            <% if(permissions == "1"){ %>
                                            <th><%=lan.action%></th>
                                            <% } %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var i = 1 %>
                                        <% payment_list.forEach((data) => { %>
                                            <tr>
                                                <td><%= i %></td>
                                                <td class="p-1">
                                                    <div class="text-center">
                                                        <% if(data.image == null){ %>
                                                            <img width="50px" height="50px" src="../images/dashboard/default/profile.png" alt="<%=lan.image_alt%>">
                                                        <% } else { %>
                                                            <img width="50px" height="50px" src="../../<%= data.image %>" alt="<%=lan.image_alt%>">
                                                        <% }; %>
                                                    </div>
                                                </td>
                                                <td><%= data.name %></td>
                                                <td><%= data.sub_title %></td>
                                                <td>
                                                    <% if (data.status == '1') { %>
                                                        <span class="badge badge-success"><%=lan.publish%></span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger"><%=lan.unpublish%></span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (data.wallet_status == '1') { %>
                                                        <span class="badge badge-success"><%=lan.active%></span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger"><%=lan.deactive%></span>
                                                    <% } %>
                                                </td>
                                                <% if(permissions == "1"){ %>
                                                <td> 
                                                    <ul class="action"> 
                                                    <li class="edit"> <a href="/settings/edit_payment/<%= data.id %>"><i class="icon-pencil-alt"></i></a></li>
                                                    </ul>
                                                </td>
                                                <% } %>
                                            </tr>
                                        <% i++ %>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

    <%- include('./partials/footer'); -%>
    <%- include('./partials/script'); -%>
  </body>
</html>