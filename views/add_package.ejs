<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.Add%> <%=lan.Package%> <%=lan.Setting%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.Add%> <%=lan.Package%> <%=lan.Setting%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-body">
                    <form  class="needs-validation" novalidate="" action="/package/add_package" method="post" enctype="multipart/form-data">
                      <div class="row">

                        <div class="col-12">
                            <div class="text-center form-group">
                                <img id="file-preview" width="150" height="150" src="../images/dashboard/default/profile.png" alt="image">
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <label class="col-form-label"><%=lan.image%></label>
                            <input class="form-control" style="height: 47px;" type="file" name="image" onchange="showPreview(event)">
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                          <label class="col-form-label"><%=lan.Title%></label>
                          <input class="form-control" type="text" name="name" placeholder="<%=lan.Enter%> <%=lan.Title%>" required>
                        </div>

                        <div class="col-12 form-group">
                          <label class="col-form-label"><%=lan.Sub%> <%=lan.Title%></label>
                          <input class="form-control" type="text" name="sub_title" placeholder="<%=lan.Enter%> <%=lan.Sub%> <%=lan.Title%>" required>
                        </div>

                        <!-- <div class="col-12 form-group">
                          <label class="col-form-label"><%=lan.Description%></label>
                          <textarea class="form-control" name="description" id="" cols="30" rows="8"></textarea>
                        </div> -->

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Up_to%> <%=lan.KM%></label>
                          <input class="form-control" type="number" step="any" name="up_to_km" placeholder="<%=lan.Enter%> <%=lan.Up_to%> <%=lan.KM%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Up_to%> <%=lan.KM%> <%=lan.Fee%></label>
                          <input class="form-control" type="number" step="any" name="up_to_fee" placeholder="<%=lan.Enter%> <%=lan.Up_to%> <%=lan.KM%> <%=lan.Fee%>" required>
                        </div> 

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Every_additional%> <%=lan.KM%> <%=lan.Rate%></label>
                          <input class="form-control" type="number" step="any" name="addi_km_rate" placeholder="<%=lan.Enter%> <%=lan.Every_additional%> <%=lan.KM%> <%=lan.Rate%>" required>
                        </div>


                        
                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Per%> <%=lan.Kg%> <%=lan.Price%></label>
                          <input class="form-control" type="number" step="any" name="per_kg_price" placeholder="<%=lan.Enter%> <%=lan.Per%> <%=lan.Kg%> <%=lan.Price%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Number%> <%=lan.of%> <%=lan.Kg%></label>
                          <input class="form-control" type="number" step="any" name="num_of_kg" placeholder="<%=lan.Enter%> <%=lan.Number%> <%=lan.of%> <%=lan.Kg%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.Radius%> <%=lan.KM%></label>
                          <input class="form-control" type="number" step="any" name="radius_km" placeholder="<%=lan.Enter%> <%=lan.Radius%> <%=lan.KM%>" required>
                        </div>

                        
                        <div class="col-sm-12 col-md-6 col-lg-5 col-xl-5 form-group">
                            <label class="col-form-label"><%=lan.Vehicle%> <%=lan.List%></label>
                            <select class="js-example-placeholder-multiple col-sm-12" name="vehicle" multiple="multiple">
                                <% vehicle_list.forEach((data) => { %>
                                    <option value="<%= data.id %>"><%= data.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-7 col-xl-7">
                          <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.Length %></label>
                              <input class="form-control" type="number" step="any" name="length" placeholder="<%=lan.Enter%> <%=lan.Length %>" required>
                            </div>
    
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.Weight %></label>
                              <input class="form-control" type="number" step="any" name="weight" placeholder="<%=lan.Enter%> <%=lan.Weight %>" required>
                            </div>
    
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.Height %></label>
                              <input class="form-control" type="number" step="any" name="height" placeholder="<%=lan.Enter%> <%=lan.Height %>" required>
                            </div>
                          </div>
                        </div>

                        <div class=" col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <div class="row">
                                <label class="col-form-label"><%=lan.Commission%> <%=lan.Rate%></label>
                                <div class="col-sm-6 col-md-8 col-lg-8 col-xl-8">
                                    <input class="form-control" type="number" step="any" name="comission_rate" placeholder="<%=lan.Enter%> <%=lan.Commission%> <%=lan.Rate%>" required>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-4 col-xl-4 d-flex">
                                    <div class="col-4">
                                        <input class="form-control" type="text" placeholder="<%=lan.FIX%>" readonly>
                                    </div>
                                    <div class="col-4 text-center">
                                        <div class="icon-state switch-outline" style="padding-top: 6px;">
                                            <label class="switch">
                                                <input type="checkbox" name="comission_type"><span class="switch-state bg-success"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <input class="form-control" type="text" placeholder="%" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <label class="col-form-label"><%=lan.Extra%> <%=lan.Charge%></label>
                            <input class="form-control" type="number" step="any" name="extra_charge" placeholder="<%=lan.Enter%> <%=lan.Extra%> <%=lan.Charge%>" required>
                        </div>

                        <div class="col-12 mt-1">
                          <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                              <div class="d-flex mb-2">
                                <div class="icon-state switch-outline">
                                  <label class="switch">
                                    <input type="checkbox" name="bidding" id="bidding_status_check"><span class="switch-state bg-success"></span>
                                  </label>
                                </div>
                                <label class="col-form-label m-l-10"><%=lan.Set_you_re_preferred_price%> / <%=lan.Bidding_System%></label>
                              </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3 col-xl-3 d-none" id="minfare">
                              <label class="col-form-label"><%=lan.Minimum%> <%=lan.Fare%></label>
                              <input class="form-control" id="minfarein" type="number" step="any" name="minimum_fare" placeholder="<%=lan.Enter%> <%=lan.Minimum%> <%=lan.Fare%>">
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3 col-xl-3 d-none" id="maxfare">
                              <label class="col-form-label"><%=lan.Maximum%> <%=lan.Fare%></label>
                              <input class="form-control" id="maxfarein" type="number" step="any" name="maximum_fare" placeholder="<%=lan.Enter%> <%=lan.Maximum%> <%=lan.Fare%>">
                            </div>
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="d-flex mb-2">
                            <div class="icon-state switch-outline">
                              <label class="switch">
                                <input type="checkbox" name="whether_charge"><span class="switch-state bg-success"></span>
                              </label>
                            </div>
                            <label class="col-form-label m-l-10"><%=lan.Weather%> <%=lan.Bad%></label><i class="fa fa-info-circle f-16 mt-2 m-l-5" data-bs-toggle="tooltip" data-bs-placement="Top" title="<%=lan.category_weather_bad%>"></i>
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="d-flex mb-2">
                            <div class="icon-state switch-outline">
                              <label class="switch">
                                <input type="checkbox" name="status"><span class="switch-state bg-success"></span>
                              </label>
                            </div>
                            <label class="col-form-label m-l-10"><%=lan.Status%></label>
                          </div>
                        </div>

                        </div>
                        <% let permiss = per != "1" ? per.pack_setting[1] : "1" %>
                        <% if(permiss == "1"){ %>
                        <div class="text-end mt-5">
                          <button class="btn btn-square btn-primary btn-air-primary add_detail_btn b-r-10" type="submit"><%=lan.Submit%></button> 
                        </div>
                        <% } %>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>