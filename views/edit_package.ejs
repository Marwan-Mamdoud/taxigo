<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.add%> <%=lan.package%> <%=lan.setting%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.add%> <%=lan.package%> <%=lan.setting%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-body">
                    <form  class="needs-validation" novalidate="" action="/package/edit_package/<%=package.id%>" method="post" enctype="multipart/form-data">
                      <div class="row">

                        <div class="col-12">
                            <div class="text-center form-group">
                                <% if(package.image == null) { %>
                                    <img id="file-preview" width="150" height="150" src="../images/dashboard/default/profile.png" alt="<%=lan.image%>">
                                <% } else { %>
                                    <img id="file-preview" width="150" height="150" src="../../<%=package.image%>" alt="<%=lan.image%>">
                                <% }; %>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <label class="col-form-label"><%=lan.image%></label>
                            <input class="form-control" style="height: 47px;" type="file" name="image" onchange="showPreview(event)">
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                          <label class="col-form-label"><%=lan.title%></label>
                          <input class="form-control" type="text" name="name" value="<%=package.name%>" placeholder="<%=lan.enter_title%>" required>
                        </div>

                        <div class="col-12 form-group">
                          <label class="col-form-label"><%=lan.sub_title%></label>
                          <input class="form-control" type="text" name="sub_title" value="<%=package.sub_title%>" placeholder="<%=lan.enter_sub_title%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.up_to_km%></label>
                          <input class="form-control" type="number" step="any" name="up_to_km" value="<%=package.up_to_km%>" placeholder="<%=lan.enter_up_to_km%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.up_to_km_fee%></label>
                          <input class="form-control" type="number" step="any" name="up_to_fee" value="<%=package.up_to_fee%>" placeholder="<%=lan.enter_up_to_km_fee%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.every_additional_km_rate%></label>
                          <input class="form-control" type="number" step="any" name="addi_km_rate" value="<%=package.addi_km_rate%>" placeholder="<%=lan.enter_every_additional_km_rate%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.per_kg_price%></label>
                          <input class="form-control" type="number" step="any" name="per_kg_price" value="<%=package.per_kg_price%>" placeholder="<%=lan.enter_per_kg_price%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.number_of_kg%></label>
                          <input class="form-control" type="number" step="any" name="num_of_kg" value="<%=package.num_of_kg%>" placeholder="<%=lan.enter_number_of_kg%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                          <label class="col-form-label"><%=lan.radius_km%></label>
                          <input class="form-control" type="number" step="any" name="radius_km" value="<%=package.radius_km%>" placeholder="<%=lan.enter_radius_km%>" required>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-5 col-xl-5 form-group">
                          <label class="col-form-label"><%=lan.vehicle_list%></label>
                          <select class="js-example-placeholder-multiple col-sm-12" name="vehicle" multiple="multiple">
                            <% vehicle_list.forEach((data) => { %>
                              <% if (vehicle.includes(data.id) == true) { %>
                                <option value="<%= data.id %>" selected><%= data.name %></option>
                              <% } else { %>
                                <option value="<%= data.id %>"><%= data.name %></option>
                              <% }; %>
                            <% }) %>
                          </select>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-7 col-xl-7">
                          <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.length%></label>
                              <input class="form-control" type="number" step="any" name="length" value="<%=package.length%>" placeholder="<%=lan.enter_length%>" required>
                            </div>
    
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.weight%></label>
                              <input class="form-control" type="number" step="any" name="weight" value="<%=package.weight%>" placeholder="<%=lan.enter_weight%>" required>
                            </div>
    
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4 form-group">
                              <label class="col-form-label"><%=lan.height%></label>
                              <input class="form-control" type="number" step="any" name="height" value="<%=package.height%>" placeholder="<%=lan.enter_height%>" required>
                            </div>
                          </div>
                        </div>

                        <div class=" col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <div class="row">
                                <label class="col-form-label"><%=lan.commission_rate%></label>
                                <div class="col-sm-6 col-md-8 col-lg-8 col-xl-8">
                                    <input class="form-control" type="number" step="any" name="comission_rate" value="<%=package.comission_rate%>" placeholder="<%=lan.enter_commission_rate%>" required>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-4 col-xl-4 d-flex">
                                    <div class="col-4">
                                        <input class="form-control" type="text" placeholder="<%=lan.fix%>" readonly>
                                    </div>
                                    <div class="col-4 text-center">
                                        <div class="icon-state switch-outline" style="padding-top: 6px;">
                                            <label class="switch">
                                                <input type="checkbox" name="comission_type" <%= package.comission_type == '%' ? 'checked' : '' %>><span class="switch-state bg-success"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <input class="form-control" type="text" placeholder="%" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                            <label class="col-form-label"><%=lan.extra_charge%></label>
                            <input class="form-control" type="number" step="any" name="extra_charge" value="<%=package.extra_charge%>" placeholder="<%=lan.enter_extra_charge%>" required>
                        </div>

                        <div class="col-12 mt-1">
                          <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                              <div class="d-flex mb-2">
                                <div class="icon-state switch-outline">
                                  <label class="switch">
                                    <input type="checkbox" name="bidding" id="bidding_status_check" <%= package.bidding == 1 ? 'checked' : '' %>><span class="switch-state bg-success"></span>
                                  </label>
                                </div>
                                <label class="col-form-label m-l-10"><%=lan.set_your_preferred_price%> / <%=lan.bidding_system%></label>
                              </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3 col-xl-3 <%= package.bidding == 1 ? '' : 'd-none' %>" id="minfare">
                              <label class="col-form-label"><%=lan.minimum_fare%></label>
                              <input class="form-control" id="minfarein" type="number" step="any" name="minimum_fare" value="<%=package.minimum_fare%>" placeholder="<%=lan.enter_minimum_fare%>" <%= package.bidding == 1 ? "required" : '' %>>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-3 col-xl-3 <%= package.bidding == 1 ? '' : 'd-none' %>" id="maxfare">
                              <label class="col-form-label"><%=lan.maximum_fare%></label>
                              <input class="form-control" id="maxfarein" type="number" step="any" name="maximum_fare" value="<%=package.maximum_fare%>" placeholder="<%=lan.enter_maximum_fare%>" <%= package.bidding == 1 ? "required" : '' %>>
                            </div>
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="d-flex mb-2">
                            <div class="icon-state switch-outline">
                              <label class="switch">
                                <input type="checkbox" name="whether_charge" <%= package.whether_charge == '1' ? 'checked' : '' %>><span class="switch-state bg-success"></span>
                              </label>
                            </div>
                            <label class="col-form-label m-l-10"><%=lan.weather_bad%></label><i class="fa fa-info-circle f-16 mt-2 m-l-5" data-bs-toggle="tooltip" data-bs-placement="Top" title="<%=lan.category_weather_bad%>"></i>
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="d-flex mb-2">
                            <div class="icon-state switch-outline">
                              <label class="switch">
                                <input type="checkbox" name="status" <%= package.status == '1' ? 'checked' : '' %>><span class="switch-state bg-success"></span>
                              </label>
                            </div>
                            <label class="col-form-label m-l-10"><%=lan.status%></label>
                          </div>
                        </div>

                        </div>
                        <% let permiss = per != "1" ? per.pack_setting[1] : "1" %>
                        <% if(permiss == "1"){ %>
                        <div class="text-end mt-5">
                          <button class="btn btn-square btn-primary btn-air-primary add_detail_btn b-r-10" type="submit"><%=lan.submit%></button> 
                        </div>
                        <% } %>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <%- include('./partials/footer'); -%>
        <%- include('./partials/script'); -%>
  </body>
</html>
